<html>
    <head>
    </head>
    <body>
        <p class="bg-primary">EXAM MANAGEMENT</p>
        <div class="page-header">
        <h3>Edit:  <%= @subject.s_id %></h3>
        </div>
        <div class="container">
            <%= @errors %>
            <%= form_for @subject , url: update_s_path(:s_id => @subject) do |f| %>
            
            <div class="form-group">
                    
                <% unless @subject.errors.empty? %>
                    <%= f.label :s_name, "Subject name: #{@subject.errors[:s_name].first}" %>
                <%else%>
                    <%= f.label :s_name,"Subject name" %>:
                <%end%>
                    <%= f.text_field :s_name, :class => 'form-control',:placeholder => "ex. OOP"  %><br />
                    
                <% unless @subject.errors.empty? %>
                    <%= f.label :section, "Section: #{@subject.errors[:section].first}" %>
                <%else%>
                    <%= f.label :section, "Section" %>:
                <%end%>
                    <%= f.text_field :section, :class => 'form-control',:placeholder => "ex. 570001"  %><br />
                    
                <% unless @subject.errors.empty? %>
                    <%= f.label :date, "Exam date: #{@subject.errors[:date].first}" %>
                <%else%>
                    <%= f.label :date,"Exam date" %>:
                <%end%>
                    <%= f.text_field :date, :class => 'form-control',:placeholder => "1/Jan/2558"  %><br />
                    
                <% unless @subject.errors.empty? %>
                    <%= f.label :time, "Exam time: #{@subject.errors[:time].first}" %>
                <%else%>
                    <%= f.label :time, "Exam time" %>:
                <%end%>
                    <%= f.text_field :time, :class => 'form-control',:placeholder => "ex. 12:00-13.30"  %><br />
                    
                <%= f.submit 'Update', :class => 'btn btn-success' %>
            </div>
            
            <% end %>
        </div>
    </body>
</html>