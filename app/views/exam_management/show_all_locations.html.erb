<html>
    <head>
    </head>
    <body>
        <p class="bg-primary">EXAM MANAGEMENT</p>
        <div class="page-header">
        <h3>Show All Locations</h3>
        </div>
        <% if flash[:notice] %>
        <label class="success-input"><%= flash[:notice] %></label>
        <% end %>
        <table class="table table-bordered">
            <thead>
                <th>Room Number</th>
                <th>Total Table</th>
                <th>Building</th>
                <th>Details</th>
            </thead>
            <tbody>
                <% @locations.each do |location| %>
                <tr>
                    <td>
                        <%= location.room_no %>
                    </td>
                    <td>
                        <%= location.total_table %>
                    </td>
                    <td>
                        <%= location.building %>
                    </td>
                    <td>
                        <%= link_to 'Details', show_location_detail_path(:dlocation => location) %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <h1><%= link_to 'add new location', add_location_form_path %></h1>
        <button onclick="window.location.href='index.html'">Back</button>
    </body>
</html>